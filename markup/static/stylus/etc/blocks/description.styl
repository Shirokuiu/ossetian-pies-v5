.description
  margin-bottom 12px
  padding-top 4px
  
  background-image linear-gradient(to bottom, #f6f6f6, #ffffff)
  &--no-bg
    background-color transparent
    .description__title
      margin-bottom 16px
    .description__text
      margin-bottom 43px

.description__title
  margin-bottom 8px
  
  font-family 'Gill-Sans-Nova', sans-serif
  font-size 35px
  line-height 42px
  font-weight 500
  color #3a3a3a
  
.description__text
  margin-bottom 25px
  
  font-size 19px
  line-height 23px
  font-weight 300
  color #808080
  
.description__list
  margin-bottom 19px
  
.description__list-items
  display flex
  width 26%
  margin-bottom 20px
  
  font-size 16px
  line-height 19px
  font-weight 400
  color #4d4d4d
  &::before
    content ''
    
    align-self flex-end
    width 6px
    height 6px
    margin-right 11px
    
    background-color #fc5a1f
    
    transform: translateY(-5px);
  
.description__border
  height 2px
  
  background-color #2993fc
  
@media(max-width 1280px)
  .description__list-items
    width: 34%;
  
@media(max-width 1200px)
  .description__title
    font-size: 28px;
    line-height 31px
    
  .description__text
    font-size: 16px;
    line-height 19px
    
@media(max-width 1000px)
  .description--no-bg .description__text
    margin-bottom 15px
    