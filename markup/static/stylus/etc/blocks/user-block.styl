.user-block__dropdown-button-wrap
  margin-left 4%
  margin-right: 1.7%;
  
  cursor pointer
  &--open
    .user-block__dropdown-button-span
      transform rotate(180deg)
  
.user-block__dropdown-button
  reset-button()
  
  font-size 17px
  line-height 20px
  font-weight 400
  color #ff5900
  
.user-block__dropdown-button-span
  position relative
  
  width 14px
  height 9px
  margin-left 10px
  &::before,
  &::after
    center-absolute()
    
    content ''
    
    width 66% 
    height 2px
    
    background-color #fc632d
  &::before
    left -5px
    
    transform rotate(45deg)
  &::after
    right -5px
    
    transform rotate(-45deg)
    
.user-block__list
  width 30.03%
  margin-right: 4.42%;
  &--footer
    width auto
    margin-right 0
    padding 17px 10px
    
    border-top 1px solid #c0c0c0
    border-bottom 1px solid #c0c0c0
    
.user-block__list-link
  position relative
  
  padding-bottom 3px
  
  font-size 17px
  line-height 20px
  font-weight 400
  color #555555
  
  transition 0.3s ease
  &::after
    content ''
    
    position absolute
    left 0
    bottom 0
    
    width 100%
    height 1px
    margin auto
    
    background-color #555555
    
    opacity 1
    
    transition 0.3s ease
  &:hover
    color #ff5900
    &::after
      width 0
      
      opacity 0
      
.user-block__search
  width: 19.03%;
  margin-right: 4.15%;
  
.user-block__search-input-wrap
  position relative
  
.user-block__search-input-icon
  position absolute
  top 0
  left 5%
  bottom 0
  
  width 24px
  height 24px
  margin auto
  .search
    width 24px
    height 24px
    
    fill #808080
      
.user-block__search-input
  padding-top 8px
  padding-left: 22%;
  padding-right 10px
  padding-bottom 8px
  
  background-color #f5f5f5
  
  border 2px solid #e8e8e8
  border-radius 5px
  
.user-block__search-button
  reset-button()
  
  position relative
  left -8px
  
  width 105px
  padding 0 5px
  
  font-size 15px
  line-height 18px
  font-weight 400
  color #383838
  
  background-color #fed851
  
  border-radius 5px
  
  transition 0.2s ease
  &:hover
    background-color #FEE68E
  
.user-block__basket-link
  margin-right 15px
  padding 11px 23px
  
  font-size 15px
  line-height 18px
  font-weight 400
  color #ffffff
  
  background-color #fc5a1f
  
  border-radius 5px
  
  transition 0.2s ease
  &:hover
    background-color #FC644E
    
.user-block__basket-text-price-wrap
  margin-bottom 2px
    
.user-block__basket-text
  font-size 16px
  line-height 19px
  font-weight 400
  &--price,
  &--currency
    font-weight 500
    color #ff5900
  &--count
    color #808080
  